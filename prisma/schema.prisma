// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(uuid())
  email            String   @unique
  passwordHash     String?
  name             String
  profileImageUrl  String?
  googleId         String?  @unique
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  playlists        Playlist[]
  listeningHistory ListeningHistory[]
  searchHistory    SearchHistory[]
  feedback         Feedback[]

  @@map("users")
}

model Playlist {
  id               String   @id @default(uuid())
  userId           String
  title            String
  description      String?
  source           PlaylistSource
  moodTags         String[]
  totalDurationSec Int      @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tracks           PlaylistTrack[]
  listeningHistory ListeningHistory[]

  @@index([userId])
  @@map("playlists")
}

enum PlaylistSource {
  AI
  MANUAL
  AUTO
}

model PlaylistTrack {
  id          String   @id @default(uuid())
  playlistId  String
  position    Int
  trackId     String
  artistName  String
  title       String
  durationSec Int
  source      TrackSource
  addedAt     DateTime @default(now())

  playlist    Playlist @relation(fields: [playlistId], references: [id], onDelete: Cascade)

  @@unique([playlistId, position])
  @@index([playlistId])
  @@map("playlist_tracks")
}

enum TrackSource {
  AUDIUS
}

model ListeningHistory {
  id                 String   @id @default(uuid())
  userId             String
  trackId            String
  playlistId         String?
  positionInPlaylist Int?
  playedMs           Int
  skipped            Boolean  @default(false)
  source             ListeningSource
  playedAt           DateTime @default(now())

  user               User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  playlist           Playlist? @relation(fields: [playlistId], references: [id], onDelete: SetNull)

  @@index([userId, playedAt])
  @@index([trackId])
  @@map("listening_history")
}

enum ListeningSource {
  AI_PLAYLIST
  SEARCH
  HISTORY
  RECOMMENDED
}

model SearchHistory {
  id             String   @id @default(uuid())
  userId         String
  query          String
  resultCount    Int
  clickedTrackId String?
  searchedAt     DateTime @default(now())

  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, searchedAt])
  @@map("search_history")
}

model TrackCache {
  id              String   @id
  title           String
  artistName      String
  durationSec     Int
  genre           String?
  tags            String[]
  audiusStreamUrl String?
  thumbnailUrl    String?
  fetchedAt       DateTime @default(now())

  @@map("track_cache")
}

model Feedback {
  id            String   @id @default(uuid())
  userId        String
  trackId       String
  score         Int
  lastUpdatedAt DateTime @updatedAt

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, trackId])
  @@index([userId])
  @@map("feedback")
}
